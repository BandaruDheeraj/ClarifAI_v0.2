# Flask 配置
SECRET_KEY=your-secret-key-here
DATABASE_URL=sqlite:///instance/clarifai.db

# 上传文件配置
UPLOAD_FOLDER=app/static/uploads
MAX_CONTENT_LENGTH=16777216  # 16MB

# Azure Storage配置
AZURE_STORAGE_CONNECTION_STRING=your-connection-string
AZURE_STORAGE_CONTAINER_NAME=file-uploads
USE_AZURE_STORAGE=false  # 开发环境设为false，生产环境设为true

# Microsoft Entra ID配置
ENTRA_CLIENT_ID=your-client-id
ENTRA_CLIENT_SECRET=your-client-secret
ENTRA_TENANT_ID=your-tenant-id
ENTRA_AUTHORITY=https://login.microsoftonline.com/your-tenant-id
ENTRA_REDIRECT_PATH=/auth/callback
ENTRA_SCOPE=user.read

# Azure OpenAI配置
AZURE_OPENAI_API_KEY=your-api-key
AZURE_OPENAI_ENDPOINT=https://your-resource-name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2025-04-15

# Azure App Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=your-connection-string
APPLICATIONINSIGHTS_ROLE_NAME=clarifai-webapp

# Azure Key Vault
AZURE_KEY_VAULT_URL=your-key-vault-url

# 日志配置
LOG_TO_STDOUT=false  # 开发环境设为false，生产环境设为true 