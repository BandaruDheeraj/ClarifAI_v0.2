# Flask应用配置
SECRET_KEY=your_secret_key_here

# 数据库配置
DATABASE_URL=postgresql://username:password@your-azure-postgres-server.postgres.database.azure.com/clarifai

# Azure OpenAI配置
AZURE_OPENAI_API_KEY=your_azure_openai_api_key_here
AZURE_OPENAI_ENDPOINT=https://your_deployment_name.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o-mini
AZURE_OPENAI_API_VERSION=2025-04-15

# Azure Blob Storage
AZURE_STORAGE_CONNECTION_STRING=your_storage_connection_string
AZURE_STORAGE_CONTAINER_NAME=file-uploads

# Azure Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=your_appinsights_connection_string
APPLICATIONINSIGHTS_ROLE_NAME=clarifai-webapp

# Azure Key Vault
AZURE_KEY_VAULT_URL=https://your-keyvault-name.vault.azure.net/

# Microsoft Entra ID配置
ENTRA_CLIENT_ID=your_app_client_id
ENTRA_CLIENT_SECRET=your_app_client_secret
ENTRA_TENANT_ID=your_tenant_id
ENTRA_AUTHORITY=https://login.microsoftonline.com/your_tenant_id
ENTRA_REDIRECT_PATH=/auth/callback
ENTRA_SCOPE=user.read

# 部署配置
FLASK_ENV=production